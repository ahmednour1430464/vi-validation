{
    "name": "vi/validation",
    "description": "High-performance PHP validation library optimized for large datasets with Laravel integration.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "illuminate/validation": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Vi\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vi\\Validation\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
